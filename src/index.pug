doctype html
html(lang="en")
  head
    //- Meta
    include includes/meta.pug

    //- Title
    title #{name}

    //- Styles
    style
      include:clean-css styles/index.css

  body
    section#setup-screen
      #setup-screen-container.screen-content
        h1 #{name}

        button.btn-start select "TeslaCam" directory

        input#fileBrowser.hidden(type="file" accept="video/mp4" webkitdirectory multiple)

    section#player-screen.hidden
      #player-screen-container.screen-content
        .header
          span.icon-button.btn-sidebar-toggle
            include:svgo assets/list.svg

          h3#clip-title &nbsp;

          span.icon-button.btn-info-popup-open
            include:svgo assets/info.svg

        #video-players
          video.video-front.active

          .video-background.video-front
          .video-label.video-front
            span Front

          video.video-left

          .video-background.video-left
          .video-label.video-left
            span Left

          video.video-right

          .video-background.video-right
          .video-label.video-right
            span Right

          video.video-back

          .video-background.video-back
          .video-label.video-back
            span Back

        #global-controls
          .controls
            button.previous
              include:svgo assets/skip_previous.svg

            button.btn-skip(data-skip="-10")
              include:svgo assets/replay_10.svg

            button.btn-skip(data-skip="-5")
              include:svgo assets/replay_5.svg

            button.btn-play-pause
              include:svgo assets/play_arrow.svg

              include:svgo assets/pause.svg

            button.btn-skip(data-skip="5")
              include:svgo assets/forward_5.svg

            button.btn-skip(data-skip="10")
              include:svgo assets/forward_10.svg

            button.next
              include:svgo assets/skip_next.svg

            button.btn-autoplay
              include:svgo assets/autoplay.svg

          .speed
            button.btn-playback-rate(data-rate="0.5")
              include:svgo assets/speed_0_5x.svg

            button.btn-playback-rate.active(data-rate="1")
              include:svgo assets/speed_1x.svg

            button.btn-playback-rate(data-rate="2")
              include:svgo assets/speed_2x.svg

      #sidebar.overlayed
        .overlay

        #sidebar-container
          .header
            span.icon-button.btn-sidebar-toggle
              include:svgo assets/list.svg

            h3 Clips

          #clips-list

      #info-popup.overlayed
        .overlay

        #info-popup-container
          .header
            span.icon
              include:svgo assets/info.svg

            h3 #{name}

            span.icon-button.btn-info-popup-close
              include:svgo assets/close.svg

          #info-popup-content
            span.version v#{version}

            span #{description}

            span 
              | by 
              a(href=author.url target="_blank" rel="noreferrer") #{author.name}


    script
      include:terser js/index.js
